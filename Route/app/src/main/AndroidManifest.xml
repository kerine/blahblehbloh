<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.route">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <permission
        android:name="com.mapv2.demo.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"></activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map"></activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAVqa46BIOJmHbPvCs1vURVxdzpEeT9x6o" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".DirectionsJSONParser"
            android:label="@string/title_activity_directions_jsonparser"></activity>
        <activity
            android:name=".GeocodeJSONParser"
            android:label="@string/title_activity_geocode_jsonparser"></activity>
        <activity
            android:name=".ViaActivity"
            android:label="@string/title_activity_via"></activity>
        <activity
            android:name=".Via2Activity"
            android:label="@string/title_activity_via2"></activity>
        <activity
            android:name=".CurrentLocationActivity"
            android:label="@string/title_activity_current_location"></activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"></activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"></activity>
        <activity
            android:name=".MyDB"
            android:label="@string/title_activity_my_db"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.route.MainActivity" />
        </activity>
        <activity
            android:name=".RouteList"
            android:label="@string/title_activity_route_list"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.route.MainActivity" />
        </activity>
        <activity
            android:name=".FollowRouteActivity"
            android:label="@string/title_activity_follow_route">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ShowRouteActivity"
            android:label="@string/title_activity_show_route"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.admin.route.MainActivity" />
        </activity>
    </application>
</manifest>
